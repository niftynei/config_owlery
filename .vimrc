call pathogen#infect()
" Turn on syntax highlighting
syn on
" Sets the VIM colorscheme.  Full list: /Users/lisaneigut/.vim/bundle/colorschemes
colorscheme: lazarus 

" Set the tab width to 2 spaces
set autoindent
set expandtab
set shiftwidth=2
set tabstop=2
set softtabstop=2
" set list
" Turn on smart case
set smartcase
" Display the line number on screen
set number

" Make the save all swap files somewhere
set directory=$HOME/.vim/swapfiles
